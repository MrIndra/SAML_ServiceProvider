
@{
    ViewBag.Title = "ResponseFromSp";
}
@using Microsoft.AspNet.Identity
@using System.Security.Claims;

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="jumbotron" style="background-color:yellowgreen">
            <div class="row">
                <center>
                    <div class="col-sm-12">
                        <img src="~/Images/service.png" style="width:10%" /><h3 style="color:white">Activants Pte Ltd Demo App</h3>
                    </div>
                </center>
            </div>
            <br />
            <div class="row">
                <center>
                    <div class="col-sm-12">
                        <table class="table table-bordered">
                            @foreach (var claim in ((ClaimsIdentity)Context.User.Identity).Claims)
                            {
                                <tr class="success" style="color:black;">
                                    <td title="@claim.Type">@claim.Type</td>
                                    <td>@claim.Value</td>
                                </tr>

                            }
                        </table>

                    </div>
                </center>
            </div>
        </div>
    </div>
}